<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <!-- Button nằm ở phía trên bên trái -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_back"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YummyFood"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/light_red"
                android:textSize="33sp"
                android:paddingStart="55dp"/>
        </LinearLayout>

        <!-- TextView nằm giữa theo chiều ngang -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add user"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/light_red"
            android:textSize="33sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Avatar"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/input_bg"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageViewAvatar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- EditText (textbox) nằm ở phía dưới -->
        <EditText
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:drawableTint="#100F0F"
            android:hint="Email"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textSize="24sp" />

        <EditText
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:drawableTint="#100F0F"
            android:hint="Username"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textSize="24sp" />

        <EditText
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:drawableTint="#100F0F"
            android:hint="Phone number"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textSize="24sp" />

        <EditText
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="10dp"
            android:drawableTint="#100F0F"
            android:hint="Address"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textSize="24sp"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:background="@drawable/input_bg"
            android:layout_gravity="center"
            android:layout_marginTop="22dp">

            <EditText
                android:id="@+id/editText_password"
                android:layout_width="0dp"
                android:layout_height="61dp"
                android:background="@drawable/input_bg_noborder"
                android:hint="Password"
                android:drawableLeft="@drawable/padlock"
                android:drawablePadding="10dp"
                android:drawableTint="#100F0F"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="24sp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/hidden"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editText_password"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:background="@drawable/input_bg"
            android:layout_gravity="center"
            android:layout_marginTop="22dp">

            <EditText
                android:id="@+id/editText_confirmPassword"
                android:layout_width="0dp"
                android:layout_height="61dp"
                android:background="@drawable/input_bg_noborder"
                android:hint="Password"
                android:drawableLeft="@drawable/padlock"
                android:drawablePadding="10dp"
                android:drawableTint="#100F0F"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="24sp"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/hidden"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editText_confirmPassword"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create user"
            android:textColor="@color/white"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:padding="14dp"
            android:layout_marginTop="32dp"
            android:textSize="26sp"
            android:backgroundTint="@color/main_red"
            android:id="@+id/btn_create_user"/>

    </LinearLayout>
</ScrollView>