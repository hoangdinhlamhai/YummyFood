<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="22dp">

            <!-- Button nằm ở phía trên bên trái -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_back"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YummyFood"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/light_red"
                android:textSize="28sp"
                android:paddingStart="55dp"/>
        </LinearLayout>

        <!-- TextView nằm giữa theo chiều ngang -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/light_red"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Avatar"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewAvatar"
                android:background="@drawable/rounded_conner"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:backgroundTint="#e2d6d6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/rounded_conner"
                android:backgroundTint="@color/light_red"
                android:clickable="true"
                android:focusable="true"
                android:padding="14dp"
                android:src="@drawable/plus_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- EditText (textbox) nằm ở phía dưới -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Email"
            android:drawableStart="@drawable/email"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/rounded_conner"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:padding="14dp"
            android:inputType="text"
            android:backgroundTint="#E2D6D6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Username"
            android:drawableStart="@drawable/user"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/rounded_conner"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:padding="14dp"
            android:inputType="text"
            android:backgroundTint="#E2D6D6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Phone number"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/rounded_conner"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:padding="14dp"
            android:inputType="text"
            android:backgroundTint="#E2D6D6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Address"
            android:drawableStart="@drawable/address"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/rounded_conner"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:padding="14dp"
            android:inputType="text"
            android:backgroundTint="#E2D6D6"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_conner"
                android:drawableStart="@drawable/padlock"
                android:drawablePadding="16dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="#E2D6D6"/>

            <ImageView
                android:id="@+id/hide_password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="14dp"
                android:background="@drawable/rounded_conner"
                android:backgroundTint="@color/light_red"
                android:src="@drawable/hide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/password_confirm_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_conner"
                android:drawableStart="@drawable/padlock"
                android:drawablePadding="16dp"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="#E2D6D6"/>

            <ImageView
                android:id="@+id/hide_password_confirm_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="14dp"
                android:background="@drawable/rounded_conner"
                android:backgroundTint="@color/light_red"
                android:src="@drawable/hide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create user"
            android:textColor="@color/white"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:padding="14dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:backgroundTint="@color/main_red"
            android:id="@+id/btn_create_user"/>

    </LinearLayout>
</ScrollView>