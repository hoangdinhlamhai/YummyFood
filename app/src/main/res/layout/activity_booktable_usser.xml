<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".booktable_usser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"

            android:textColor="@android:color/white"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt bàn"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tầng 1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="10dp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/background_booktable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 1"
                    android:textStyle="bold"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/table1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/table1_reserved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/background_booktable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 2"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/table2_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tầng 2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="10dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/bgr_bookedtable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 1"
                    android:textStyle="bold"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/table3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/table3_reserved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Đã đặt"
                        android:textColor="@color/light_red"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/background_booktable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table4_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 2"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/table4_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tầng thượng"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="10dp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/background_booktable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table5_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 1"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/table5_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/background_booktable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table6_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 2"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/table6_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/background_booktable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table7_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 3"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/table7_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:background="@drawable/background_booktable"
                android:gravity="center">

                <TextView
                    android:id="@+id/table8_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 4"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/table8_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá"
                    android:textSize="14sp" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
