                    android:text="29.000đ"
                    android:textColor="#D02828"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewcongmon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/plus_black_circle" />

            <TextView
                android:id="@+id/idSL4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  1  " />

            <ImageView
                android:id="@+id/imageViewtrumon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/minus_black_circle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mon5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#AD9C9C"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <CheckBox
                android:id="@+id/checkbox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
