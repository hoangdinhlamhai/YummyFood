                    android:text="79.000đ"
                    android:textColor="#D02828"
                    android:textSize="16sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/plus_black_circle" />

            <TextView
                android:id="@+id/idSL5"
                android:layout_width="wrap_content"
