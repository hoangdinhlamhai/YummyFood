        </LinearLayout>

        <LinearLayout
            android:id="@+id/mon4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#D3C4C4"
            android:gravity="center_vertical"
