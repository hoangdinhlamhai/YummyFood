                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_image"
                    android:src="@drawable/milktea"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foodName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trà sữa - MayCha"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/foodPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="29.000đ"
                    android:textColor="#D02828"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/plus_black_circle" />

            <TextView
                android:id="@+id/idSL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  1  " />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/minus_black_circle" />
        </LinearLayout>

        <!-- Món 3 -->
