<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="14dp"
    app:cardCornerRadius="14dp"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".admin.Dialog_Confirm_Logout_Admin">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingStart="22dp"
        android:paddingEnd="22dp">

        <!-- "Are you sure?" text -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Confirm Logout!"
            android:textColor="#FF5A83"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Orange circular design with dots -->
        <RelativeLayout
            android:id="@+id/orange_circle"
            android:layout_marginBottom="12dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/title_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/warning" />

        <Button
            android:id="@+id/btn_okay"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/orange_circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF5A00"
            android:text="Okay"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:background="@drawable/rounded_conner"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_okay"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#ffffff"
            android:layout_marginBottom="22dp"
            android:text="Cancel"
            android:textColor="#000000"
            android:textSize="18sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>