<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back button -->
            <Button
                android:id="@+id/button3"
                android:layout_width="71dp"
                android:layout_height="47dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="338dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Back button icon -->
            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="57dp"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/button3"
                app:layout_constraintStart_toStartOf="@+id/button3"
                app:layout_constraintTop_toTopOf="@+id/button3"
                app:srcCompat="@drawable/morong_icon" />

            <!-- Flash Sale Banner -->
            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="231dp"
                android:layout_height="157dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="111dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/flashsale" />

            <!-- Product 1 Layout -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/product1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView13">

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/product_image1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/milktea" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:text="Trà sữa kem trứng khê"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/product_image1"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Product Brand -->
                <TextView
                    android:id="@+id/product_brand1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="MayCha"
                    android:textColor="@android:color/holo_orange_light"
                    app:layout_constraintStart_toEndOf="@+id/product_image1"
                    app:layout_constraintTop_toBottomOf="@+id/product_name1" />

                <!-- Giá gốc -->

                <!-- Discounted Price -->
                <TextView
                    android:id="@+id/product_discounted_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="39.000đ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:layout_editor_absoluteY="43dp" />

                <!-- Add to Cart Button -->
                <ImageView
                    android:id="@+id/product_add_to_cart1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_discounted_price1"
                    app:srcCompat="@drawable/cart" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"
        app:menu="@menu/nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
