<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Register_Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="6dp"
            android:layout_marginHorizontal="140dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo"
            android:background="@drawable/border_radius_logo"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            />
        <TextView
            android:textColor="@color/light_red"
            android:textSize="50sp"
            android:layout_marginBottom="33dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="YummyFood"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Name of Owner"
            android:drawableStart="@drawable/user"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/rounded_conner"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:padding="14dp"
            android:inputType="text"
            android:backgroundTint="#E2D6D6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Email or phone number"
            android:drawableStart="@drawable/email"
            android:drawablePadding="16dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/rounded_conner"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:padding="14dp"
            android:inputType="text"
            android:backgroundTint="#E2D6D6"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_conner"
                android:drawableStart="@drawable/padlock"
                android:drawablePadding="16dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="#E2D6D6"/>

            <ImageView
                android:id="@+id/hide_password_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="14dp"
                android:background="@drawable/rounded_conner"
                android:backgroundTint="@color/main_red"
                android:src="@drawable/hide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/password_confirm_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_conner"
                android:drawableStart="@drawable/padlock"
                android:drawablePadding="16dp"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="#E2D6D6"/>

            <ImageView
                android:id="@+id/hide_password_confirm_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="14dp"
                android:background="@drawable/rounded_conner"
                android:backgroundTint="@color/main_red"
                android:src="@drawable/hide"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/white"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:padding="14dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:backgroundTint="@color/main_red"
            android:id="@+id/login_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="sans-serif-black"
            android:textStyle="italic"
            android:textSize="22sp"
            android:textColor="@color/main_red"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

