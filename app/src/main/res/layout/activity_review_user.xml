<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main">

    <!-- Nút trở về -->

    <!-- Tiêu đề -->

    <!-- Mã QR -->

    <!-- Nút thanh toán -->

    <ImageView
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:layout_marginTop="68dp"
        android:contentDescription="Back Button"
        android:src="@drawable/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_return"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Thanh toán"
        android:textColor="#E53935"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/btn_return"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_payment2"
        android:layout_width="279dp"
        android:layout_height="27dp"
        android:layout_below="@id/btn_return"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Ngân hàng quân đội MBBank"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qr_code_image" />

    <TextView
        android:id="@+id/title_payment3"
        android:layout_width="279dp"
        android:layout_height="27dp"
        android:layout_below="@id/btn_return"
        android:layout_centerHorizontal="true"
        android:text="Số tk: 0312 4311 9999"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_payment2" />

    <TextView
        android:id="@+id/title_payment4"
        android:layout_width="279dp"
        android:layout_height="27dp"
        android:layout_below="@id/btn_return"
        android:layout_centerHorizontal="true"
        android:text="Tên tài khoản: Nguyễn Văn An"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_payment3" />

    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/title_payment"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:contentDescription="QR Code"
        android:src="@drawable/qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_payment" />

    <LinearLayout
        android:id="@+id/payment_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#E53935"
            android:text="Chuyển Khoản"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#E53935"
            android:text="Tiền mặt"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
