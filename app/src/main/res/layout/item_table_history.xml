<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/background_note"
    android:layout_marginBottom="8dp">

    <!-- Tên bàn -->
    <TextView
        android:id="@+id/table_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên bàn: Bàn số 1"
        android:textStyle="bold"
        android:textSize="16sp"/>
    <!-- Trạng thái đặt bàn -->
    <TextView
        android:id="@+id/booking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Đã đặt"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>


    <!-- Ngày đặt bàn -->
    <TextView
        android:id="@+id/booking_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày: 2024-06-17"/>

    <!-- Giờ bắt đầu -->
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giờ bắt đầu: 18:00"/>

    <!-- Giờ kết thúc -->
    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giờ kết thúc: 20:00"/>

    <!-- Nút Hủy đặt bàn -->
    <Button
        android:id="@+id/btn_cancel_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:text="Hủy đặt bàn"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_red_light" />
</LinearLayout>
